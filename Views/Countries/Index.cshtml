@model CountriesViewModels

@{
    ViewData["Title"] = "Index";
}

<h1>Countries</h1>

<h1>Create</h1>

<h4>Country</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Country.Name" class="control-label"></label>
                <input asp-for="Country.Name" class="form-control" />
                <span asp-validation-for="Country.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="text-danger">@ViewBag.ErrorMessage</div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in Model.Countries)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => country.Name)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@country.CountryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
