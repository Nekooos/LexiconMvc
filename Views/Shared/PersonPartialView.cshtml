@model IEnumerable<PersonViewModel>

@foreach(var person in Model) 
{ 
<div class="row">
    <div class="col-sm-2"><p>@person.Id</p></div>
    <div class="col-sm-2"><p>@person.Name</p></div>
    <div class="col-sm-2"><p>@person.City</p></div>
    <div class="col-sm-2"><p>@person.PhoneNumber</p></div>

    <div class="col-sm-2">
 
        <a asp-action="Delete" asp-route-id="@person.Id">Delete</a>

    </div>
</div>
}
