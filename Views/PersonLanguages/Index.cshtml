@model PersonLanguageViewModels

@{
    ViewData["Title"] = "Index";
}

<h1>Create PersonLanguage</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonLanguage.PersonId" class="control-label"></label>
                <select asp-for="PersonLanguage.PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PersonLanguage.LanguageId" class="control-label"></label>
                <select asp-for="PersonLanguage.LanguageId" class="form-control" asp-items="ViewBag.LanguageId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Person
            </th>
            <th>
                Language
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var personLanguage in Model.PersonLanguages)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => personLanguage.Person.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => personLanguage.Language.Name)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = personLanguage.PersonId, personLanguage.LanguageId })
                </td>
            </tr>
        }
    </tbody>
</table>
